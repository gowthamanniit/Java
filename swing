package application1;

import java.awt.EventQueue;
import java.awt.event.FocusEvent;
import java.awt.event.FocusListener;

import javax.swing.JFrame;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.Font;

public class Focus1 implements FocusListener{

	private JFrame frame;
	private JTextField t1;
	JLabel lblAns;
	private JTextField textField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Focus1 window = new Focus1();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Focus1() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 300);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		t1 = new JTextField();
		t1.setBounds(181, 67, 86, 20);
		t1.addFocusListener(this);
		frame.getContentPane().add(t1);
		t1.setColumns(10);
		
		JLabel lblFocuseventExamle = new JLabel("FocusEvent Examle");
		lblFocuseventExamle.setBounds(181, 26, 105, 14);
		frame.getContentPane().add(lblFocuseventExamle);
		
		lblAns = new JLabel("ans");
		lblAns.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblAns.setBounds(88, 137, 336, 78);
		frame.getContentPane().add(lblAns);
		
		textField = new JTextField();
		textField.setBounds(181, 106, 86, 20);
		frame.getContentPane().add(textField);
		textField.setColumns(10);
	}

	@Override
	public void focusGained(FocusEvent e) {
	
		lblAns.setText("gain - cursor in textbox");
	}

	@Override
	public void focusLost(FocusEvent e) {
	
		lblAns.setText("lost - cursor in textbox");
	}
	
}
